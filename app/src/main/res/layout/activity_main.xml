<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="284dp"
            android:src="@drawable/logo"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Lady M Cake Boutique"
        android:layout_marginTop="8dp"

        android:textSize="25dp"
        android:layout_gravity="center"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:text="     NYC-based bakery-cafe showcases top-shelf desserts such as its signature mille crÃªpes cake."
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_weight="0.73" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black"
        android:text="Address: 8718 W 3rd St, Los Angeles, CA 90048"
        android:textSize="14sp" />
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Menu: places.singleplatform.com"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:textSize="14sp" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Phone: (323) 825-8888"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:textSize="14sp" />





</LinearLayout>